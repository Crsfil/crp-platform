{
  "realm": "crp",
  "enabled": true,
  "registrationAllowed": false,
  "resetPasswordAllowed": false,
  "rememberMe": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "sslRequired": "external",
  "revokeRefreshToken": true,
  "refreshTokenMaxReuse": 0,
  "accessTokenLifespan": 900,
  "ssoSessionIdleTimeout": 3600,
  "ssoSessionMaxLifespan": 28800,
  "roles": {
    "realm": [
      { "name": "ADMIN" },
      { "name": "MANAGER" },
      { "name": "ANALYST" },
      { "name": "USER" }
    ]
  },
  "users": [
    {
      "username": "admin@crp.local",
      "email": "admin@crp.local",
      "enabled": true,
      "emailVerified": true,
      "credentials": [ { "type": "password", "value": "admin", "temporary": false } ],
      "realmRoles": [ "ADMIN", "MANAGER", "ANALYST", "USER" ]
    }
  ],
  "clients": [
    {
      "clientId": "crp-cli",
      "name": "CRP CLI",
      "protocol": "openid-connect",
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "redirectUris": ["http://localhost:8080/auth/callback"],
      "webOrigins": ["+"],
      "serviceAccountsEnabled": false,
      "attributes": { "pkce.code.challenge.method": "S256" },
      "defaultClientScopes": [ "roles", "profile", "email" ],
      "optionalClientScopes": [ "address", "phone" ],
      "protocolMappers": [
        {
          "name": "realm-roles-to-roles-claim",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        },
        {
          "name": "realm-roles-to-authorities-claim",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "authorities",
            "jsonType.label": "String"
          }
        },
        { "name": "aud-inventory", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "inventory-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-procurement", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "procurement-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-customer", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "customer-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-kyc", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "kyc-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-underwriting", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "underwriting-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-pricing", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "product-pricing-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-application", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "application-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-agreement", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "agreement-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-schedule", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "schedule-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-billing", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "billing-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-payments", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "payments-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-edocs", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "edocs-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-bpm", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "bpm-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "aud-accounting", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "accounting-service", "id.token.claim": "false", "access.token.claim": "true"} }
      ]
    },
    {
      "clientId": "inventory-service",
      "name": "inventory-service",
      "protocol": "openid-connect",
      "bearerOnly": true
    },
    {
      "clientId": "reports-service",
      "name": "reports-service",
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "secret": "reports-secret",
      "protocolMappers": [
        {
          "name": "audience-inventory",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "inventory-service",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        },
        {
          "name": "audience-procurement",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "procurement-service",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    { "clientId": "schedule-service", "name": "schedule-service", "protocol": "openid-connect", "bearerOnly": true },
    { "clientId": "product-pricing-service", "name": "product-pricing-service", "protocol": "openid-connect", "bearerOnly": true },
    {
      "clientId": "schedule-service-caller",
      "name": "schedule-service-caller",
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "secret": "schedule-secret",
      "protocolMappers": [
        { "name": "audience-pricing", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "product-pricing-service", "id.token.claim": "false", "access.token.claim": "true"} }
      ]
    },
    {
      "clientId": "bpm-service-caller",
      "name": "bpm-service-caller",
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "secret": "bpm-secret",
      "protocolMappers": [
        { "name": "audience-kyc", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "kyc-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "audience-underwriting", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "underwriting-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "audience-pricing", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "product-pricing-service", "id.token.claim": "false", "access.token.claim": "true"} }
      ]
    },
    { "clientId": "procurement-service", "name": "procurement-service", "protocol": "openid-connect", "bearerOnly": true },
    { "clientId": "customer-service", "name": "customer-service", "protocol": "openid-connect", "bearerOnly": true },
    { "clientId": "kyc-service", "name": "kyc-service", "protocol": "openid-connect", "bearerOnly": true },
    { "clientId": "underwriting-service", "name": "underwriting-service", "protocol": "openid-connect", "bearerOnly": true },
    { "clientId": "application-service", "name": "application-service", "protocol": "openid-connect", "bearerOnly": true },
    { "clientId": "agreement-service", "name": "agreement-service", "protocol": "openid-connect", "bearerOnly": true },
    { "clientId": "billing-service", "name": "billing-service", "protocol": "openid-connect", "bearerOnly": true },
    { "clientId": "payments-service", "name": "payments-service", "protocol": "openid-connect", "bearerOnly": true },
    { "clientId": "edocs-service", "name": "edocs-service", "protocol": "openid-connect", "bearerOnly": true },
    { "clientId": "accounting-service", "name": "accounting-service", "protocol": "openid-connect", "bearerOnly": true },
    {
      "clientId": "billing-service-caller",
      "name": "billing-service-caller",
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "secret": "billing-secret",
      "protocolMappers": [
        { "name": "audience-schedule", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "schedule-service", "id.token.claim": "false", "access.token.claim": "true"} }
      ]
    },
    {
      "clientId": "application-service-caller",
      "name": "application-service-caller",
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "secret": "application-secret",
      "protocolMappers": [
        { "name": "audience-kyc", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "kyc-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "audience-underwriting", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "underwriting-service", "id.token.claim": "false", "access.token.claim": "true"} },
        { "name": "audience-pricing", "protocol": "openid-connect", "protocolMapper": "oidc-audience-mapper", "consentRequired": false, "config": {"included.client.audience": "product-pricing-service", "id.token.claim": "false", "access.token.claim": "true"} }
